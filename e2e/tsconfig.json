{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2022"],
    "strict": true,
    "exactOptionalPropertyTypes": true,
    "skipLibCheck": true,
    "types": ["@cloudflare/workers-types", "vitest/globals", "node"]
  },
  "include": ["src/**/*", "tests/**/*", "helpers/**/*", "*.test.ts"],
  "exclude": ["node_modules"]
}
